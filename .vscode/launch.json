    "version": "0.2.0",
    "configurations": [

        {
            "name": "C++ Custom Launcher",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/seq/nasteroids-seq",
            "args": ["10",
                     "250",
                     "5",
                     "2000"],
            "preLaunchTask": "g++ custom build active file",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}